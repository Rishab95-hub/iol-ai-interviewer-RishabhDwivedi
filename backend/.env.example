# Application Settings
APP_NAME=AI Interviewer Phase 2
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_interviewer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# LLM Configuration - OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# LLM Provider (openai or azure_openai)
LLM_PROVIDER=openai

# Interview Configuration
MAX_INTERVIEW_DURATION_MINUTES=60
DEFAULT_INTERVIEW_TEMPLATE=backend-engineer
ENABLE_FOLLOW_UP_QUESTIONS=true
MAX_FOLLOW_UP_DEPTH=3

# Scoring Configuration
SCORING_SCALE_MIN=1
SCORING_SCALE_MAX=5

# Security
SECRET_KEY=change-this-in-production-use-python-secrets-token-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# File Upload
MAX_RESUME_SIZE_MB=5
ALLOWED_RESUME_FORMATS=pdf,docx,txt
UPLOAD_DIR=./uploads/resumes

# CORS (Allow Streamlit portals)
CORS_ORIGINS=http://localhost:8501,http://localhost:8502
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
