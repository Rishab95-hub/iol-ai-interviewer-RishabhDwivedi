name: data-scientist
version: "1.0"
display_name: "Data Scientist"
description: "Technical interview template for data science positions covering ML/AI, statistics, and data analysis"
position_type: "data-scientist"
duration_minutes: 45
max_follow_up_depth: 3
enable_dynamic_questions: true

questions:
  - id: "ds-001"
    question_text: "Tell me about your background in data science and the types of projects you've worked on."
    category: "experience"
    difficulty: "easy"
    expected_duration_minutes: 5
    follow_up_enabled: true
    
  - id: "ds-002"
    question_text: "How would you approach building a recommendation system for an e-commerce platform with millions of users?"
    category: "ml_design"
    difficulty: "hard"
    expected_duration_minutes: 8
    follow_up_enabled: true
    
  - id: "ds-003"
    question_text: "Explain the bias-variance tradeoff and how it affects model performance."
    category: "ml_fundamentals"
    difficulty: "medium"
    expected_duration_minutes: 6
    follow_up_enabled: true
    
  - id: "ds-004"
    question_text: "How do you handle imbalanced datasets in classification problems?"
    category: "practical_ml"
    difficulty: "medium"
    expected_duration_minutes: 6
    follow_up_enabled: true
    
  - id: "ds-005"
    question_text: "Walk me through your process for feature engineering and feature selection in a machine learning project."
    category: "methodology"
    difficulty: "medium"
    expected_duration_minutes: 7
    follow_up_enabled: true
    
  - id: "ds-006"
    question_text: "How would you evaluate and monitor a machine learning model deployed in production?"
    category: "ml_ops"
    difficulty: "hard"
    expected_duration_minutes: 7
    follow_up_enabled: true
    
  - id: "ds-007"
    question_text: "Describe a situation where you had to communicate complex data insights to non-technical stakeholders."
    category: "communication"
    difficulty: "easy"
    expected_duration_minutes: 5
    follow_up_enabled: true
    
  - id: "ds-008"
    question_text: "What questions do you have for me about the data science work we do here?"
    category: "candidate_questions"
    difficulty: "easy"
    expected_duration_minutes: 5
    follow_up_enabled: false

dimensions:
  - dimension_name: "ml_expertise"
    dimension_label: "ML/AI Expertise"
    description: "Depth of knowledge in machine learning algorithms, deep learning, and AI techniques"
    weight: 1.5
    scoring_criteria:
      1: "Limited ML knowledge; struggles with basic concepts"
      2: "Familiar with common algorithms but lacks depth"
      3: "Solid understanding of ML fundamentals and common techniques"
      4: "Strong ML expertise; can discuss advanced topics and trade-offs"
      5: "Expert-level ML knowledge; stays current with research"
      
  - dimension_name: "statistical_reasoning"
    dimension_label: "Statistical Reasoning"
    description: "Understanding of statistics, probability, and experimental design"
    weight: 1.3
    scoring_criteria:
      1: "Poor statistical foundation; cannot apply basic concepts"
      2: "Basic statistics knowledge; limited application"
      3: "Good grasp of statistics; applies correctly in most cases"
      4: "Strong statistical reasoning; designs rigorous experiments"
      5: "Expert statistician; handles complex analytical challenges"
      
  - dimension_name: "problem_solving"
    dimension_label: "Analytical Problem-Solving"
    description: "Ability to frame problems, analyze data, and derive actionable insights"
    weight: 1.4
    scoring_criteria:
      1: "Struggles with problem formulation and analysis"
      2: "Can solve straightforward problems with guidance"
      3: "Good analytical skills; approaches problems systematically"
      4: "Strong problem-solver; thinks creatively about solutions"
      5: "Exceptional analytical thinker; finds novel insights"
      
  - dimension_name: "technical_implementation"
    dimension_label: "Technical Implementation"
    description: "Coding skills, data engineering, and ability to implement solutions at scale"
    weight: 1.2
    scoring_criteria:
      1: "Poor coding skills; cannot implement solutions effectively"
      2: "Basic implementation skills; needs significant support"
      3: "Competent programmer; implements solutions adequately"
      4: "Strong technical skills; writes efficient, scalable code"
      5: "Excellent engineer; bridges DS and engineering seamlessly"
      
  - dimension_name: "business_acumen"
    dimension_label: "Business Impact & Communication"
    description: "Understanding of business context and ability to translate insights into action"
    weight: 1.1
    scoring_criteria:
      1: "Little business awareness; poor communication of insights"
      2: "Basic business understanding; communication needs work"
      3: "Good business sense; communicates findings clearly"
      4: "Strong business acumen; drives impact through insights"
      5: "Exceptional business partner; influences strategy"
      
  - dimension_name: "cultural_fit"
    dimension_label: "Cultural Fit & Collaboration"
    description: "Teamwork, curiosity, growth mindset, and alignment with values"
    weight: 0.9
    scoring_criteria:
      1: "Poor fit; collaboration or attitude concerns"
      2: "Some concerns about team fit"
      3: "Good fit; collaborative and curious"
      4: "Strong fit; would enhance team dynamics"
      5: "Exceptional fit; natural team leader and mentor"
